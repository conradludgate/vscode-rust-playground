{
	"name": "vscode-rust-playground",
	"displayName": "Rust Playground",
	"description": "Convenient and fast way to play around with Rust",
	"version": "0.1.2",
	"engines": {
		"vscode": "^1.56.0"
	},
	"icon": "images/ferrisHammer.png",
	"categories": [
		"Other"
	],
	"publisher": "ConradLudgate",
	"repository": {
		"type": "github",
		"url": "https://github.com/conradludgate/vscode-rust-playground"
	},
	"activationEvents": [
		"onCommand:rust-playground.newPlayground",
		"onView:rust-playground.playgroundView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"panel": [
				{
					"id": "rust-playground",
					"title": "Rust Playground",
					"icon": "media/ferris.svg"
				}
			]
		},
		"views": {
			"rust-playground": [
				{
					"type": "webview",
					"id": "rust-playground.playgroundView",
					"name": "Output"
				}
			]
		},
		"commands": [
			{
				"command": "rust-playground.newPlayground",
				"title": "Create a New Rust Playground"
			},
			{
				"command": "rust-playground.stopProcess",
				"title": "Stop Process"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "rust-playground.stopProcess",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "14.x",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"random-word-slugs": "^0.0.2"
	}
}
